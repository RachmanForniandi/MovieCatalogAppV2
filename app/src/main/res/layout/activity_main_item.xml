<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_clear_space">

    <ImageView
        android:id="@+id/img_poster"
        android:layout_width="45dp"
        android:layout_height="68dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sampleholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_spacing">

        <TextView
            android:id="@+id/txtView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Captain America: Civil War"
            android:textSize="@dimen/txt_title"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txtView_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following the events of Age of Ultron, ..."
            android:textSize="@dimen/txt_subheading"/>

        <TextView
            android:id="@+id/txtView_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_spacing"
            android:text="Wednesday, Apr 27, 2016"
            android:textSize="@dimen/txt_caption"/>

    </LinearLayout>

</LinearLayout>